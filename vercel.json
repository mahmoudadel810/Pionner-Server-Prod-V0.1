{
  "version": 2,
  "functions": {
    "index.js": {
      "runtime": "nodejs22.x"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/payments/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST"],
      "headers": {
        "cache-control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}
